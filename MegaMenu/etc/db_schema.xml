        <column xsi:type="int" name="menu_id" padding="10" unsigned="true" nullable="false" identity="false" comment="Menu ID"/>
        <column xsi:type="int" name="status" padding="10" unsigned="true" nullable="false" identity="false" comment="Status"/>
        <column xsi:type="int" name="type" padding="10" unsigned="true" nullable="false" identity="false" comment="Type"/>
        <column xsi:type="varchar" name="label" nullable="false" length="50" default="" comment="Label"/>
        <column xsi:type="varchar" name="block_top" nullable="false" length="200" default="" comment="Blog Top"/>
        <column xsi:type="varchar" name="block_left" nullable="false" length="200" default="" comment="Blog Left"/>
        <column xsi:type="varchar" name="block_right" nullable="false" length="200" default="" comment="Block Right"/>
        <column xsi:type="varchar" name="block_bottom" nullable="false" length="200" default="" comment="Block Bottom"/>
        <column xsi:type="int" name="width" padding="11" unsigned="false" nullable="false" identity="false" default="0" comment="Width"/>
        <column xsi:type="varchar" name="block_content" nullable="false" length="200" default="" comment="Add Block Content"/>
        <column xsi:type="int" name="url_type" padding="11" unsigned="false" nullable="false" identity="false" default="0" comment="Ad URL Type"/>
        <column xsi:type="varchar" name="custom_link" nullable="false" length="200" default="" comment="Add Custom Link"/>
        <column xsi:type="int" name="category_id" padding="11" unsigned="false" nullable="false" identity="false" default="0" comment="Ad Category Id"/>
        <column xsi:type="text" name="store_id" nullable="true" comment="Store ID" />
        <column xsi:type="text" name="custom_css" nullable="true" comment="Add Custom Css"/>
        <column xsi:type="text" name="content" nullable="false" comment="Content"/>
        <column xsi:type="int" name="category_store_id" padding="11" unsigned="false" nullable="true" identity="false" comment="Category Store"/>
        <column xsi:type="int" name="priority" padding="11" unsigned="false" nullable="true" identity="false" comment="Priority"/>
