            <column name="id"/>
        </constraint>
        <index referenceId="BSS_MEGAMENU_ITEMS_ID" indexType="btree">
            <column name="id"/>
            <column name="id"/>
        </index>
    </table>
    <table name="bss_megamenu_stores" resource="default" engine="innodb" comment="bss_megamenu_stores">
