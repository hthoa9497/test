        <column xsi:type="varchar" name="store_id" nullable="false" length="255" default="" comment="Create categories for store"/>
        <column xsi:type="int" name="priority" padding="10" unsigned="true" nullable="true" identity="false" comment="Priority"/>
        <column xsi:type="mediumtext" name="value" nullable="false" comment="value"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="category_store_id"/>
        </constraint>
        <index referenceId="BSS_MEGAMENU_STORES_CATEGORY_STORE_ID" indexType="btree">
            <column name="category_store_id"/>
        </index>
    </table>
    <table name="bss_megamenu_content" resource="default" engine="innodb" comment="bss_megamenu_content">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="text" name="content" nullable="false" comment="Content"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>
