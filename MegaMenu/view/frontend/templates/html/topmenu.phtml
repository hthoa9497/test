        <div id="defaultmenu" class="navbar-collapse collapse">
            <ul class="nav navbar-nav"
                data-mage-init='{"menu":
                {"responsive":true, "expanded":true, "position":{"my":"left top","at":"left bottom"}}
                }'
            >
                <?php if ($helper->getConfig('enable_home') == 1): ?>
                    <li class="level0 <?= $helper->isHomeUrl() ? 'active' : "" ?> level-top ui-menu-item" >
                        <a class="level-top ui-corner-all"
                           href="<?= $block->escapeUrl($block->getBaseUrl()) ?>" >
                            <span><?= $block->escapeHtml(__("Home")) ?></span></a>
                    </li>
                <?php endif ?>
                <?= /* @noEscape */ $_menu; ?>
                <?= /* @escapeNotVerified */  $block->getChildHtml(); ?>
            </ul>
        </div>
    </nav>
<?php endif; ?>
