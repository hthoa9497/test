<?php $columnsLimit = $block->getColumnsLimit() ?: 0; ?>
<?php $_menu = $block->getHtml('level-top', 'submenu', $columnsLimit) ?>

<?php
$helper = $block->getHelperData();
?>
<?php if ($helper->getConfig('enable') == 1): ?>
