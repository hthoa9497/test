<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Catalog\Api\Data\ProductCustomOptionInterface">
        <attribute code="is_all_groups" type="boolean" />
        <attribute code="is_all_websites" type="boolean" />
        <!-- if disabled = true - option attributes will not show in api response-->
        <attribute code="disabled" type="boolean" />
        <attribute code="disabled_by_values" type="boolean" />
    </extension_attributes>
    <extension_attributes for="MageWorx\OptionBase\Api\Data\ProductCustomOptionValuesInterface">
        <attribute code="disabled" type="boolean" />
    </extension_attributes>
</config>